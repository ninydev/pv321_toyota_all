@model WebApplicationGeo.Models.Cars.Toyota.ColorModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add Color</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group"><input asp-for="Name"/></div>
    <div class="form-group"><input asp-for="RGB" type="color"/></div>
    <div class="form-group"><input asp-for="Code"/></div>
    
    <div class="form-group">
        <input type="file" name="file" accept="image/png, image/jpeg"/>
    </div>
    
    <div class="form-group">
        <input type="submit"/>
    </div>
</form>
