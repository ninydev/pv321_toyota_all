@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApplicationGeo.Models.Cars.Toyota
@model WebApplicationGeo.Models.Cars.Toyota.ConfigurationModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ConfigurationModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelId" class="control-label"></label>
                <select asp-for="ModelId" name="ModelId" class ="form-control" asp-items="ViewBag.ModelId"></select>
            </div>
            <div>
                <select>
                    @foreach (ToyotaModel m in ViewBag.AllModels)
                    {
                        <option value="@m.Id"> @m.Name </option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

