@using WebApplicationGeo.Models.ViewModels
@model IEnumerable<WebApplicationGeo.Models.Cars.Toyota.ColorModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Url)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RGB)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img height="50" width="50" class="rounded-circle" src="@item.Url"/><br />
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td style="background-color: @item.RGB">
                @Html.DisplayFor(modelItem => item.RGB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
@Html.Partial("_Pagination", (PaginateViewModel)ViewData["Paginate"])
@Html.Partial("_OrderBy", (PaginateViewModel)ViewData["Paginate"])
